<script>
  $(document).ready(function() {
    $(window).scroll(function() {
      if (window.location.pathname == '/') {
        contentTop = $('#lower').position().top
        header = $('header')

        if ($(window).scrollTop() >= contentTop - header.outerHeight() - 40 ) {
          if (header.hasClass("transparent-nav"))
          {
            header.hide();
            header.removeClass("transparent-nav");
            header.fadeIn();
          }
        }
        else {
          header.addClass("transparent-nav");
        }
      }

    })
  })
