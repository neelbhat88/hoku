              <input type="text" name="b_e08a3f7c7c61eaa78ad746184_77765b0239" value="" style="margin: auto;">
            </div>
            <div class="clear">
              <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button" style="margin: auto;">
            </div>
          </form>
        </div>

        <!--End mc_embed_signup-->
      </div>

    </div><!-- /content -->

  </div><!-- /lower -->

  <div class="modal fade" id="getInvolvedModal">
    <div class="modal-dialog">
